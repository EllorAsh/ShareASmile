<body>
    <div class="header">
        <img class="vertical-logo" src="./assets/Logo_2.png"/>
    </div>
    <div class="sign-in-form font-2">
        <div class="sign-in-up-block">
            <form action="/sign-in" method="post">
                <lable for="username">
                    Username
                </lable><br/>
                <input class="button-med" type="text" id="username" name="username"><br/>
                <label for="password">
                    Password
                </label><br/>
                <input class="button-med" type="password" id="password" name="password"><br/>
                <div class="submit-input">
                    <input class="button-dark" type="submit">    
                </div>
            </form>
            <a class="button-dark google-button" href="/auth/google" role="button">
                Sign In with Google
            </a>
        </div>
    </div>
    <div class="footer">
        <img class="horizontal-logo" src="./assets/Logo_1.png"/>

    </div>
</body>
